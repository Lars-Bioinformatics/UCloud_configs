# search command history using up- and down arrows
"\e[A": history-search-backward
"\e[B": history-search-forward

# change command completion
TAB: menu-complete
"\e[Z": "\e-1\C-i" # shift-tab menu completion
set menu-complete-display-prefix On # Only make partial matching before cycling options.

# ignore case completion
set completion-ignore-case On


# Settings from https://www.topbug.net/blog/2017/07/31/inputrc-for-humans/
set completion-prefix-display-length 3
set mark-symlinked-directories On
set show-all-if-ambiguous On
set show-all-if-unmodified On
set colored-stats On
set visible-stats On